<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/house_manage_iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:src="@mipmap/house_manage_grey_left"
        />

    <ImageView
        android:id="@+id/house_manage_iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:src="@mipmap/house_manage_grey_middle"
        />

    <ImageView
        android:id="@+id/house_manage_iv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:src="@mipmap/house_manage_grey_middle"
        />

    <ImageView
        android:id="@+id/house_manage_iv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:src="@mipmap/house_manage_grey_right"
        />
</LinearLayout>
