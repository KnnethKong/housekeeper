<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.haiwai.housekeeper.view.ObservableScrollView
        android:id="@+id/pro_skill_detail_obscrl"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/user_pro_detail_title"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/user_pro_detail_iv_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/pro_skill_detail_bg_head"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/o2o_detail_rl_collpase_title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:background="@color/transparent"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/pro_detail_iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:src="@mipmap/ib_back_white"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_pro_detail_ll_empty"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_above="@+id/user_pro_detail_title"
                android:layout_alignBottom="@+id/user_pro_detail_title"
                android:background="@color/transparent"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_pro_detail_ll_empty"
                android:orientation="vertical"
                android:paddingLeft="@dimen/divider_big_width"
                android:paddingRight="@dimen/divider_big_width">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:background="@color/white"
                            android:gravity="center_horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="60dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/user_pro_skill_detail_tv_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="3dp"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="17sp" />

                                <LinearLayout
                                    android:visibility="visible"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:drawableLeft="@mipmap/pro_skill_detail_jnrz"
                                        android:drawablePadding="10dp"
                                        android:paddingBottom="20dp"
                                        android:paddingLeft="6dp"
                                        android:paddingTop="20dp"
                                        android:text="@string/pro_detail_jnrz"
                                        android:textColor="@color/text_1"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/user_pro_skill_detail_tv_skill_state"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center_vertical"
                                        android:paddingRight="6dp"
                                        android:text=""
                                        android:textColor="@color/line_gray"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/black_overlay" />

                                <LinearLayout
                                    android:visibility="visible"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:drawableLeft="@mipmap/pro_skill_detail_jnpjsf"
                                        android:drawablePadding="10dp"
                                        android:paddingBottom="20dp"
                                        android:paddingLeft="6dp"
                                        android:paddingTop="20dp"
                                        android:text="@string/pro_skill_average_money"
                                        android:textColor="@color/text_1"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/user_pro_skill_detail_tv_moneyp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right|center_vertical"
                                        android:paddingRight="6dp"
                                        android:text=""
                                        android:textColor="@color/line_gray"
                                        android:textSize="14sp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/black_overlay" />

                                <TextView
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginTop="20dp"
                                    android:text="@string/pro_skill_service_intro"
                                    android:textColor="@color/text_3"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/user_pro_skill_detail_tv_class"
                                    android:visibility="visible"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_marginBottom="25dp"
                                    android:text="专业除雪弄的特别干净，专业除雪弄的特别干净，专业除雪弄的特别干净"
                                    android:textColor="@color/line_gray"
                                    android:textSize="14sp" />
                                <com.haiwai.housekeeper.view.MyListView
                                    android:id="@+id/user_pro_skill_detail_ml_edu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    />
                                <com.haiwai.housekeeper.view.MyListView
                                    android:id="@+id/user_pro_skill_detail_ml_job"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/user_pro_skill_detail_iv_head"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/pro_skill_detail_head" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/user_pro_skill_ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/theme"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="@string/point_here"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/o2o_detail_tv_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/pro_skill_begin"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.haiwai.housekeeper.view.ObservableScrollView>

</RelativeLayout>