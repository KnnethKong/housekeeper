<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/advice_feedback_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/divider_big_width"
        android:padding="@dimen/divider_big_width"
        android:hint="@string/fes"
        android:textColorHint="@color/light_gray"
        android:textSize="14sp"
        android:background="@drawable/bg_shape_tv_rect_white_little_corner"
        android:minHeight="160dp"
        android:gravity="start"
        />
    <Button
        android:id="@+id/advice_feedback_tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/commit"
        style="@style/commit_btn_small_big"
        />
</LinearLayout>