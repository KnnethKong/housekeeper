<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_go_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haiwai.housekeeper.activity.user.GoPayActivity">

    <com.haiwai.housekeeper.view.TopViewNormalBar
        android:id="@+id/top_gopay_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.haiwai.housekeeper.view.TopViewNormalBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_xxxl"
        android:layout_marginTop="@dimen/space_l"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/tv_curr_pay"
            android:textColor="@color/txt_c_color"
            android:textSize="17sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_gopay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/red"
            android:textSize="17sp"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_l"
        android:layout_marginRight="@dimen/space_l"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_we_chat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_smlx">

            <TextView
                android:id="@+id/tv_gopay_wx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_l"
                android:drawableLeft="@drawable/order_detail_wallet_new_round_button_select"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/wx_pay"
                android:textColor="@color/text_1"
                android:textSize="17sp" />


            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_l"
                android:src="@mipmap/order_detail_wxzf" />

            <!--<TextView-->
            <!--android:id="@+id/tv_wx_hv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/space_sm"-->
            <!--android:layout_toLeftOf="@id/iv_wx"-->
            <!--android:visibility="gone"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/red"-->
            <!--android:text="(￥12 汇率:1233.44)"/>-->

        </RelativeLayout>

        <View
            android:id="@+id/we_chat_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:id="@+id/rl_ali_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_smlx"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gopay_zfb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_l"
                android:drawableLeft="@drawable/order_detail_wallet_new_round_button_select"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/zfb_pay"
                android:textColor="@color/text_1"
                android:textSize="17sp" />


            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_l"
                android:src="@mipmap/order_detail_zfb" />

            <!--<TextView-->
            <!--android:id="@+id/tv_zfb_hv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/space_sm"-->
            <!--android:layout_toLeftOf="@id/iv_zfb"-->
            <!--android:visibility="gone"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/red"-->
            <!--android:text="(￥12 汇率:1233.44)"/>-->
        </RelativeLayout>


        <View
            android:id="@+id/ali_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_smlx"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gopay_pp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_l"
                android:drawableLeft="@drawable/order_detail_wallet_new_round_button_select"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="PayPal"
                android:textColor="@color/text_1"
                android:textSize="17sp" />


            <ImageView
                android:id="@+id/iv_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_l"
                android:src="@mipmap/order_detail_paypal" />
            <!--<TextView-->
            <!--android:id="@+id/tv_zfb_pp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/space_sm"-->
            <!--android:layout_toLeftOf="@id/iv_pp"-->
            <!--android:visibility="gone"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/red"-->
            <!--android:text="(￥12 汇率:1233.44)"/>-->
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_gopay_next"
        style="@style/common_vip_button_style"
        android:layout_marginTop="@dimen/space_xxl"
        android:text="@string/btn_con_pay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="16dp"
            android:src="@mipmap/pop_big_dot" />

        <TextView
            android:id="@+id/hlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/wxpay"
            android:textSize="@dimen/txt_m" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="16dp"
            android:src="@mipmap/pop_big_dot" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/AlipayandPaypal"
            android:textSize="@dimen/txt_m" />
    </LinearLayout>
</LinearLayout>