<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity.user.ImageShowActivity">

    <com.haiwai.housekeeper.view.PinchImageView
        android:id="@+id/image_show_imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/image_show_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_show_ib_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:src="@mipmap/ib_back_white" />

        <TextView
            android:id="@+id/image_show_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text=""
            android:layout_centerInParent="true"
             />
        <ImageButton
            android:id="@+id/image_show_ib_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/xiangce_shanchu"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:visibility="gone"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/image_show_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/tv_show_des"
            />

        <TextView
            android:id="@+id/image_show_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/light_gray2"
            android:textStyle="italic"
            android:textSize="12sp"
            android:text="2016 / 06 / 03"
            />

    </LinearLayout>
</RelativeLayout>
