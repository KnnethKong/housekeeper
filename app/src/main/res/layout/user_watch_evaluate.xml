<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <com.haiwai.housekeeper.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/order_detail_daizhifu_ll_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:orientation="vertical"
                android:padding="@dimen/divider_big_width">

                <LinearLayout
                    android:id="@+id/value_from_pro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape_tv_rect_white_little_corner"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="20dp"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="10dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/watch_evaluate_he"
                                style="@style/ratingBar_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="0"
                                android:stepSize="1"/>

                            <TextView
                                android:id="@+id/watch_evaluate_he_tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textColor="@color/text_1"
                                android:textSize="12sp"
                                android:textStyle="italic"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/watch_evaluate_he_tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/bg_arrow_up_grey"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="6dp"
                            android:text=""
                            android:textSize="12sp"
                            />

                        <LinearLayout
                            android:id="@+id/ll_label_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_l"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <com.haiwai.housekeeper.view.WarpLinearLayout
                                android:id="@+id/watch_evaluate_fl_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:grivate="left"
                                app:horizontal_Space="5dp"
                                app:vertical_Space="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/value_from_o2o"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_shape_tv_rect_white_little_corner"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minHeight="20dp"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="10dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_star_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <RatingBar
                                android:id="@+id/watch_evaluate_me"
                                style="@style/ratingBar_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="0"
                                android:visibility="gone"
                                android:stepSize="1"/>

                            <TextView
                                android:id="@+id/watch_evaluate_me_tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text=""
                                android:textColor="@color/text_1"
                                android:textSize="12sp"
                                android:textStyle="italic"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/watch_evaluate_me_tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/bg_arrow_up_grey"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="6dp"
                            android:text=""
                            android:textSize="12sp"
                            />

                        <LinearLayout
                            android:id="@+id/ll_label_view1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_l"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <com.haiwai.housekeeper.view.WarpLinearLayout
                                android:id="@+id/watch_evaluate_fl_2"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:grivate="left"
                                app:horizontal_Space="5dp"
                                app:vertical_Space="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.haiwai.housekeeper.view.MyScrollView>


</LinearLayout>