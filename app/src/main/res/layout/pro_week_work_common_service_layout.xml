<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white_g"
              android:orientation="vertical">

    <com.haiwai.housekeeper.view.TopViewNormalBar
        android:id="@+id/top_ser_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.haiwai.housekeeper.view.TopViewNormalBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/pro_order_common_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pro_layout_margain_left_right"
                android:layout_marginRight="@dimen/pro_layout_margain_left_right"
                android:layout_marginTop="@dimen/pro_order_img_marging"
                android:background="@color/white"
                android:orientation="vertical">

                <com.haiwai.housekeeper.view.ProServiceView
                    android:id="@+id/pro_one_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.haiwai.housekeeper.view.ProServiceView>
                <TextView
                    style="@style/line_horizental_type"/>
                <com.haiwai.housekeeper.view.ProServiceView
                    android:id="@+id/pro_two_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.haiwai.housekeeper.view.ProServiceView>
                <TextView
                    style="@style/line_horizental_type"/>
                <com.haiwai.housekeeper.view.ProServiceView
                    android:id="@+id/pro_three_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.haiwai.housekeeper.view.ProServiceView>
                <TextView
                    style="@style/line_horizental_type"/>
                <com.haiwai.housekeeper.view.ProServiceView
                    android:id="@+id/pro_three_a_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.haiwai.housekeeper.view.ProServiceView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>