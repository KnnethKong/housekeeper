<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haiwai.housekeeper.activity.server.ContactActivity">

    <com.haiwai.housekeeper.view.TopViewNormalBar
        android:id="@+id/top_contact_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.haiwai.housekeeper.view.TopViewNormalBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pro_title_bar_height"
        android:background="@color/gray_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_contact_a"
                style="@style/textViewAttr"
                android:text="@string/tv_contact_a"
                />

            <TextView
                android:id="@+id/tv_contact_b"
                style="@style/textViewAttr"
                android:text="@string/tv_contact_b"
                />

            <TextView
                android:id="@+id/tv_contact_c"
                style="@style/textViewAttr"
                android:text="@string/tv_contact_c"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/pro_cursor"
            android:layout_marginBottom="@dimen/pro_order_item_img_marign_bottom_small"
            android:scaleType="matrix"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_contact_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">
    </android.support.v4.view.ViewPager>
</LinearLayout>
