<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             tools:context="com.haiwai.housekeeper.fragment.server.OrderFragment">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_default_height">

                <ImageView
                    android:id="@+id/iv_order_switch"
                    android:layout_width="37dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_ll"
                    android:src="@mipmap/new_pro_left_btn"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/iv_center_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_one_default"/>
                    <ImageView
                        android:id="@+id/iv_week_roder_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_week_default"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_xxx"
                android:background="@color/bj_a_color"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_s">

                    <TextView
                        android:id="@+id/tv_order_no"
                        style="@style/textViewAttr"
                        android:text="@string/order_no1"
                        />

                    <TextView
                        android:id="@+id/tv_order_yes"
                        style="@style/textViewAttr"
                        android:text="@string/order_yes"
                        />

                    <TextView
                        android:id="@+id/tv_order_history"
                        style="@style/textViewAttr"
                        android:text="@string/order_history"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pro_cursor"
                    android:scaleType="matrix"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_conditon_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_xxx"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_condition_select"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/arrow_txt_selector"
                    android:gravity="center"
                    android:paddingRight="60dp"
                    android:text="@string/order_condition_order"
                    android:textColor="@drawable/pro_home_fragment_text_selector"
                    android:textSize="@dimen/txt_l"/>

                <ImageView
                    android:layout_width="@dimen/line_divider_default_height"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/space_mm"
                    android:layout_marginTop="@dimen/space_mm"
                    android:background="@color/line_color_default"/>

                <TextView
                    android:id="@+id/tv_condition_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/sx_txt_selector"
                    android:gravity="center"
                    android:paddingRight="60dp"
                    android:text="@string/order_condition_select"
                    android:textColor="@drawable/pro_home_fragment_text_selector"
                    android:textSize="@dimen/txt_l"/>
            </LinearLayout>

        </LinearLayout>


        <android.support.v4.view.ViewPager
            android:id="@+id/id_page_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">
        </android.support.v4.view.ViewPager>

    </LinearLayout>
</FrameLayout>
