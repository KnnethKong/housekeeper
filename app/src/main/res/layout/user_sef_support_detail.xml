<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <com.haiwai.housekeeper.view.ObservableScrollView
        android:id="@+id/user_home_ob_body"
        android:layout_above="@+id/user_self_support_detail_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/self_support_detail_rl_title_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/home_iv_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/self_support_iv_title" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="24dp"
                        android:src="@mipmap/qingchengziying" />
                    <RelativeLayout
                        android:id="@+id/o2o_detail_rl_collpase_title"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/transparent"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/self_support_detail_iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:src="@mipmap/ib_back_white"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/o2o_collapse_order"
                                android:layout_width="50dp"
                                android:layout_height="60dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@android:color/transparent"
                                android:paddingRight="10dp"
                                android:src="@mipmap/pro_detail_share"
                                android:visibility="visible" />

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/home_none"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/self_support_detail_rl_title_container"
                    android:orientation="horizontal"></LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/home_none"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_iv_menu"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/home_logo" />

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/divider_big_width"
                android:paddingRight="@dimen/divider_big_width">

                <TextView
                    android:id="@+id/self_support_tv_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="信件管理"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="空屋巡视"
                    android:textColor="@color/text_1"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="家中需要改建翻新，清澄管家的专业总承包在此恭候多时，家中需要改建翻新，清澄管家的专业总承包在此恭候多时"
                    android:textColor="@color/text_1"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/light_gray" />
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="信件查收"
                    android:textColor="@color/text_1"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="家中需要改建翻新，清澄管家的专业总承包在此恭候多时，家中需要改建翻新，清澄管家的专业总承包在此恭候多时"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/self_support_content_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="信息反馈"
                    android:textColor="@color/text_1"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="家中需要改建翻新，清澄管家的专业总承包在此恭候多时，家中需要改建翻新，清澄管家的专业总承包在此恭候多时"
                    android:textColor="@color/text_1"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </com.haiwai.housekeeper.view.ObservableScrollView>

    <RelativeLayout
        android:id="@+id/user_self_support_detail_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/theme"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/self_support_tv_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/self_support_tv_bottom_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@mipmap/arrow_up_white" />
    </RelativeLayout>
</RelativeLayout>