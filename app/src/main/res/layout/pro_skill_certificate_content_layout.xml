<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_certificate_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/space_mm"
              android:layout_marginRight="@dimen/space_mm"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/pro_rect_bj"
        android:orientation="horizontal">

        <TextView
            style="@style/left_title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/pro_order_img_marging"
            android:text="@string/certificate_name"/>

        <EditText
            android:id="@+id/et_skill_certificate"
            android:textColor="@color/txt_a_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/show_for_customer"
            android:padding="@dimen/space_s"
            android:textColorHint="@color/hint_a_color"
            android:textSize="@dimen/txt_xl"/>
    </LinearLayout>

    <TextView
        android:id="@+id/et_skill_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="top"
        android:hint="@string/up_load"
        android:minLines="4"
        android:padding="@dimen/space_m"
        android:textColorHint="@color/hint_a_color"
        android:textSize="@dimen/space_l"/>

    <RelativeLayout
        android:id="@+id/realyout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <GridView
            android:id="@+id/noScrollgridview"
            android:layout_width="220dp"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/space_l"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </GridView>


        <TextView
            android:id="@+id/ib_skill_subm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/noScrollgridview"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/space_xl"
            android:layout_marginRight="@dimen/space_s"
            android:text="@string/submit_all"
            android:background="@drawable/evalue_slide_color_shape"/>
       <!-- <ImageButton
            android:id="@+id/ib_skill_subm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@null"
            android:src="@mipmap/pro_submit_icon"/>-->

        <TextView
            android:id="@+id/tv_concon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/space_m"
            android:layout_below="@+id/noScrollgridview"
            android:paddingLeft="@dimen/space_xl"
            android:text="@string/upload_pic"/>

        <TextView
            android:id="@+id/tv_del_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_concon"
            android:layout_marginBottom="@dimen/space_l"
            android:layout_marginRight="@dimen/space_l"
            android:layout_marginTop="@dimen/space_mm"
            android:gravity="center"
            android:padding="@dimen/space_s"
            android:text="@string/addr_del"
            android:textColor="@color/text_color_count"
            android:textSize="@dimen/txt_xl"/>
    </RelativeLayout>
</LinearLayout>
