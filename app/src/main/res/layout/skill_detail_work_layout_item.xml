<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_work_time"
            style="@style/left_text"
            android:textSize="13sp"
            android:drawableLeft="@mipmap/pro_offer_point"
            android:drawablePadding="@dimen/pro_order_item_padding"
            android:text="教育经历/2008.08-2011.09ffdsfdsfsdfsdfsdfsdfsdfsdfd"/>

        <TextView
            android:id="@+id/tv_work_gsm"
            style="@style/left_text"
            android:layout_below="@id/tv_work_time"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:text=""/>

        <TextView
            android:id="@+id/ib_work_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/pro_skill_detail_ecu"
            android:layout_marginRight="15dp"
            android:layout_below="@id/tv_work_time"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="本科"
          />
    </RelativeLayout>
</LinearLayout>
