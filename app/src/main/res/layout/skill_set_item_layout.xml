<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pro_detail_content_height_m"
        android:layout_marginLeft="@dimen/space_l"
        android:layout_marginRight="@dimen/space_l"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_skill_content_set_title"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/space_l"
            android:layout_gravity="center_vertical"
            android:text="@string/skill_set_a"
            android:textColor="@color/tv_pressed_focused"/>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <ToggleButton
                android:id="@+id/tv_skill_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:button="@drawable/pro_skill_set_btn_selector"
                android:paddingRight="@dimen/space_mm"
                android:text=""
                android:textOff=""
                android:textOn=""/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
