<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_g"
    android:orientation="vertical"
    tools:context=".activity.server.OrderDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/pro_skil_top_img_bj"/>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:src="@mipmap/pro_back_white"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="110dp"
                android:background="@color/white">
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/tv_jnmc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_icon"
                    android:layout_gravity="center_horizontal"
                    android:text="冬天除雪"
                    android:textColor="@color/tv_pressed_focused"
                    android:textSize="@dimen/txt_xxxl"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/left_text"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/pro_skill_cofirm_icon"
                            android:drawablePadding="@dimen/pro_order_item_padding"
                            android:text="@string/skill_rname"/>

                        <TextView
                            android:id="@+id/tv_jnrz"
                            style="@style/right_text"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/txt_l"
                            android:text="@string/certified"/>
                    </RelativeLayout>

                    <TextView
                        style="@style/line_horizental_type"/>

                    <RelativeLayout
                        android:id="@+id/skill_fee_stand"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">

                        <TextView
                            style="@style/left_text"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@mipmap/pro_skill_service_icon"
                            android:drawablePadding="@dimen/pro_order_item_padding"
                            android:text="@string/skill_fwuf"/>

                        <TextView
                            android:id="@+id/tv_fwsf"
                            style="@style/right_text"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/txt_l"
                            android:text="$100/平米"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_fee_line"
                        style="@style/line_horizental_type"/>

                    <TextView
                        style="@style/left_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="@string/skill_fwjs"
                        android:textSize="@dimen/pro_order_text_title_size_big"/>

                    <TextView
                        android:id="@+id/tv_fwjs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="专业除雪年弄的特别干净专业除雪20年弄的特别干净，弄的特别干净。"/>

                    <TextView
                        style="@style/line_horizental_type"/>

                    <LinearLayout
                        android:id="@+id/ll_edu_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_work_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>
