<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#55000000"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@mipmap/pop_big_bj"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_m"
            android:layout_marginTop="@dimen/space_l"
            android:drawableLeft="@mipmap/pop_big_dot"
            android:drawablePadding="@dimen/space_m"
            android:text="@string/pro_pop3"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_diss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:src="@mipmap/pop_big_icon"
        android:layout_alignBottom="@+id/ll_content"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
