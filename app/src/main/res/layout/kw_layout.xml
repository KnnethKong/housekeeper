<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_l"
        android:layout_marginRight="@dimen/space_l"
        android:layout_marginTop="@dimen/space_xl"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@mipmap/bjfw"
            android:gravity="center_vertical"
            android:minHeight="@dimen/space_smlx"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_xll"
                android:src="@mipmap/iconfw"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_xxx"
                    android:padding="@dimen/space_sm"
                    android:text="信件管理"
                    android:textColor="@color/txt_a_color"
                    android:textSize="@dimen/txt_xxxl"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_s"
                    android:layout_marginTop="@dimen/space_s">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_xxxl"
                        android:text="MAR"
                        android:textSize="@dimen/txt_xl"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/space_l"
                        android:text=""
                        android:textSize="@dimen/txt_xl"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/env_mb"/>
    </FrameLayout>


    <com.haiwai.housekeeper.view.MyHorizontalScrollView
        android:id="@+id/hsv_kw_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_kw_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_l"
                android:layout_marginRight="@dimen/space_l"
                android:layout_marginTop="@dimen/space_xl"
                android:background="@mipmap/bj_kwgl_yes"
                android:gravity="center_vertical"
                android:minHeight="@dimen/space_smlx"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_xxx2"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_xxxl"
                            android:padding="@dimen/space_s"
                            android:text="@string/vip_kwgl"
                            android:textColor="@color/white"

                            android:textSize="@dimen/txt_xl"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/space_s"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:layout_marginRight="4dp">
                            <ImageView
                                android:id="@+id/iv_empty_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/icon_no_label"/>
                            <TextView
                                android:id="@+id/iv_empty_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Add_Service"
                                android:textSize="10sp"
                                android:textColor="@color/white2"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_kw_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:textColor="#fff"
                            android:layout_marginRight="@dimen/space_xl"
                            android:layout_marginTop="@dimen/space_s"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_s"
                        android:layout_marginTop="@dimen/space_sm">

                        <TextView
                            android:id="@+id/tv_mar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_smlx"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_xl"/>
                        <LinearLayout
                            android:id="@+id/yuanjia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_mar">
                        <!--<TextView-->

                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text=" 原价"-->
                            <!--android:visibility="gone"-->

                            <!--android:textColor="@color/white"-->
                            <!--android:textSize="@dimen/txt_s"/>-->
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="1dp"
                                    android:layout_centerInParent="true"
                                    android:background="@color/white2"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/txt_xl"
                                    android:textColor="@color/white"
                                    android:text="$199.00"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_pri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="@dimen/space_xl"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_xl"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_kw_pause"
                android:layout_width="100dp"
                android:layout_height="79dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/stop_service"
                android:layout_gravity="center_vertical"
                android:textColor="#fff"
                android:background="#DCDCDC"/>
            <TextView
                android:id="@+id/tv_kw_delete"
                android:layout_width="100dp"
                android:layout_height="79dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:gravity="center"
                android:text="@string/addr_del"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="#ff0000"/>
        </LinearLayout>

    </com.haiwai.housekeeper.view.MyHorizontalScrollView>


</LinearLayout>
