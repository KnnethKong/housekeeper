<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_fwbj_4_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="18dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/view_fwbj_4_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/view_fwbj_4_rb_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/order_detail_wallet_round_button_select"
            android:drawablePadding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:text=""
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
        <RadioButton
            android:id="@+id/view_fwbj_4_rb_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/order_detail_wallet_round_button_select"
            android:drawablePadding="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text=""
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
        <RadioButton
            android:id="@+id/view_fwbj_4_rb_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/order_detail_wallet_round_button_select"
            android:drawablePadding="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text=""
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
        <RadioButton
            android:id="@+id/view_fwbj_4_rb_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/order_detail_wallet_round_button_select"
            android:drawablePadding="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text=""
            />
        <EditText
            android:id="@+id/et_input_num_room2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:hint="@string/large_room"
            android:background="@drawable/bg_shape_tv_rect_gray_light_fill_corner"
            />

        <View
            android:id="@+id/fwbj_line31"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/line_gray"/>
        <RadioButton
            android:id="@+id/view_fwbj_4_rb_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/order_detail_wallet_round_button_select"
            android:drawablePadding="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text=""
            />
        <View
            android:id="@+id/fwbj_line32"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/line_gray"/>
        <RadioButton
            android:id="@+id/view_fwbj_4_rb_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/order_detail_wallet_round_button_select"
            android:drawablePadding="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text=""
            />

        <EditText
            android:id="@+id/et_input_num_room3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-40dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:hint="@string/large_room"
            android:background="@drawable/bg_shape_tv_rect_gray_light_fill_corner"
            />

        <View
            android:id="@+id/fwbj_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/line_gray"/>
        <RadioButton
            android:id="@+id/view_fwbj_4_rb_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/order_detail_wallet_round_button_select"
            android:drawablePadding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text=""
            />
    </RadioGroup>

    <EditText
        android:id="@+id/et_input_num_room1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical"
        android:hint="@string/enter_num"
        android:layout_marginTop="-40dp"
        android:background="@drawable/bg_shape_tv_rect_gray_light_fill_corner"
        />
</LinearLayout>