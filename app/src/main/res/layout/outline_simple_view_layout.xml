<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_s"
        android:layout_marginTop="@dimen/space_l"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/space_l">

        <TextView
            android:id="@+id/tv_out_s_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_l"
            android:text="服务标准"
            android:textSize="@dimen/txt_xxxl"/>

        <TextView
            android:id="@+id/tv_out_s_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_s"
            android:drawableLeft="@mipmap/grey_point"
            android:drawablePadding="@dimen/space_s"
            android:paddingLeft="@dimen/space_l"
            android:text="标准+深度"
            android:textSize="@dimen/txt_xl"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_l"
        android:src="@mipmap/arrow_right"/>
</RelativeLayout>