            android:text="环境/动物\n保护" />

        <TextView
            android:id="@+id/liangdian_item_09"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:textSize="@dimen/txt_m"
            android:text="文体艺术" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liangdian_horizontal_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/liangdian_item_10"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:textSize="@dimen/txt_m"
            android:text="敬老助残" />

        <TextView
            android:id="@+id/liangdian_item_11"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:textSize="@dimen/txt_m"
            android:text="教育" />

        <TextView
            android:id="@+id/liangdian_item_12"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:textSize="@dimen/txt_m"
            android:text="精准扶贫" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liangdian_horizontal_05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/liangdian_item_13"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:textSize="@dimen/txt_m"
