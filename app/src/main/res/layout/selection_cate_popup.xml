<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liangdian_horizontal_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/liangdian_item_01"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:textSize="@dimen/txt_m"
            android:text="接机用车" />

        <TextView
            android:id="@+id/liangdian_item_02"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:textSize="@dimen/txt_m"
            android:text="扶持" />

        <TextView
            android:id="@+id/liangdian_item_03"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:textSize="@dimen/txt_m"
            android:text="医疗健康" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liangdian_horizontal_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/liangdian_item_04"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
