            android:id="@+id/liangdian_item_15"
            style="@style/Selection_TV_style"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/txt_m"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>