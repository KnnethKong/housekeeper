<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="2dp"
                android:layout_height="2000dp"
                android:layout_alignBottom="@+id/ll_layout"
                android:layout_marginLeft="16dp"
                android:background="@mipmap/item_need_vertical_line"/>

            <LinearLayout
                android:id="@+id/ll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="@dimen/divider_big_width"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="12dp"
                        android:background="@mipmap/red_point"/>

                    <TextView
                        android:id="@+id/tv_user_order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@mipmap/text_bg_italic"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="12月27"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_user_order_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:text="地毯清洗"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="10dp"
                                android:paddingLeft="@dimen/space_s"
                                android:paddingTop="10dp">

                                <TextView
                                    android:id="@+id/tv_user_order_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/light_gray2"
                                    android:textSize="16sp"
                                    />

                                <TextView
                                    android:id="@+id/tv_user_order_code"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text=" "
                                    android:singleLine="true"
                                    android:textColor="@color/light_gray2"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/riv_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_l"
                            android:src="@mipmap/arrow_right"
                            />

                        <LinearLayout
                            android:id="@+id/ll_icon_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_ml"
                            android:layout_toLeftOf="@id/riv_img"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.haiwai.housekeeper.view.CircleImageView
                                android:id="@+id/iv_server_icon"
                                android:layout_width="38dip"
                                android:layout_height="38dip"
                                android:src="@mipmap/person_page_icon"/>

                            <TextView
                                android:id="@+id/tv_server_name"
                                android:layout_width="100dp"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_s"
                                android:text=""
                                android:singleLine="true"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_gray"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/tv_user_state2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="招标中"
                            android:padding="5dp"
                            android:textColor="@color/light_gray2"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_tv_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:drawablePadding="@dimen/space_sm"
                            android:paddingBottom="5dp"
                            android:paddingLeft="6dp"
                            android:paddingTop="5dp"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="13sp"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/tv_btn_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:drawablePadding="@dimen/space_sm"
                            android:drawableRight="@mipmap/arrow_right"
                            android:paddingBottom="5dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="5dp"
                            android:text="8人接单"
                            android:textColor="@color/red"
                            android:textSize="13sp"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/tv_btn_des_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/bg_shape_tv_rect_theme_fill_corner"
                            android:drawablePadding="@dimen/space_sm"
                            android:paddingBottom="5dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="5dp"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="13sp"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/tv_btn_status_btn_right_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="@dimen/space_l"
                            android:background="@drawable/bg_shape_tv_rect_gray_light_fill_corner"
                            android:paddingBottom="5dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="5dp"
                            android:text=""
                            android:textColor="@color/light_gray2"
                            android:textSize="13sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tv_user_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:padding="5dp"
                            android:textColor="@color/red"
                            android:textSize="@dimen/txt_xl"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/tv_user_state2"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_btn_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_btn_status_btn_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="@dimen/space_l"
                            android:background="@drawable/bg_shape_tv_rect_theme_fill_corner"
                            android:paddingBottom="5dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="5dp"
                            android:text="接受报价同意开工"
                            android:textColor="@color/theme"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/tv_btn_status_btn_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_shape_tv_rect_gray_light_fill_corner"
                            android:paddingBottom="5dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="5dp"
                            android:text="不接受报价"
                            android:textColor="@color/light_gray2"
                            android:textSize="13sp"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>