<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/divider_big_width"
        android:background="@drawable/bg_shape_tv_rect_white_little_corner"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_prool_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/user_guide_syxy"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/use_guide_label_1"
            android:textColor="@color/text_1"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/tv_problem_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/use_guide_cjwt"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/arrow_right"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="visible"
            android:text="@string/use_guide_label_2"
            android:textColor="@color/text_1"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/rule_of_garee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_tv_rect_white_little_corner"
        android:layout_marginLeft="@dimen/divider_big_width"
        android:layout_marginRight="@dimen/divider_big_width"
        android:drawableLeft="@mipmap/user_guide_jfgz"
        android:drawablePadding="20dp"
        android:drawableRight="@mipmap/arrow_right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/use_guide_label_3"
        android:textColor="@color/text_1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_tv_rect_white_little_corner"
        android:layout_margin="@dimen/divider_big_width"
        android:drawableLeft="@mipmap/use_guide_gywm"
        android:drawablePadding="20dp"
        android:drawableRight="@mipmap/arrow_right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/set_label_4"
        android:textColor="@color/text_1"
        android:textSize="16sp" />
</LinearLayout>