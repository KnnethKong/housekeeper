<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bind_pay_pal_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haiwai.housekeeper.activity.user.BindPayPalAccount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#fff">
                <ImageView
                    android:id="@+id/iv_finish_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/iv_back_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/paypal_bind"
                    android:textColor="#000"
                    android:padding="5dp"

                    android:textSize="15sp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_add_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:visibility="visible"
                android:orientation="vertical"
                android:background="#fff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="7"
                        android:id="@+id/input_paypal_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="14sp"
                        android:cursorVisible="false"
                        android:hint="@string/paypal_account"/>
                    <TextView
                        android:id="@+id/tv_chanage_paypal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:drawableRight="@mipmap/user_mine_edit"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_add_new_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_gray"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>

                    <EditText
                        android:id="@+id/input_re_paypal_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textSize="14sp"
                        android:hint="@string/re_paypal_account"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/color_gray"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"/>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/input_paypal_code"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:background="@null"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:hint="@string/inp_code"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"/>
                        <TextView
                            android:id="@+id/tv_get_bind_code"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_get_pass"
                            android:textColor="@color/green"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bind_commit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_bind_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:text="@string/commit_paypal_account"
                    android:background="@drawable/evalue_slide_color_shape"
                    />

                <TextView
                    android:id="@+id/tv_paypal_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textColor="#000"
                    android:gravity="center_horizontal"
                    android:textSize="13sp"
                    android:text="@string/bind_paypal_text"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
