<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_yygl_layouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_shape_tv_rect_white_little_corner"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_yygl_his"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ll_yygl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@string/yygl1"
                android:textColor="@color/text_1"
                android:textSize="16sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <com.haiwai.housekeeper.view.HouseManageProgress
                    android:id="@+id/hmp_yygl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_yygl_b_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_yygl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawableLeft="@mipmap/nike_theme"
                        android:drawablePadding="5dp"
                        android:text="@string/first_service_stpe"
                        android:textColor="@color/text_1"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_yygl_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="2016.03.02"
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_right"
                        android:text="@string/house_design_detail"
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yygl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawableLeft="@mipmap/nike_theme"
                        android:drawablePadding="5dp"
                        android:text="@string/second_service_stpe"
                        android:textColor="@color/text_1"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_yygl_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="2016.03.02"
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_right"
                        android:text="@string/house_design_detail"
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yygl_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawableLeft="@mipmap/nike_theme"
                        android:drawablePadding="5dp"
                        android:text="@string/third_service_stpe"
                        android:textColor="@color/text_1"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_yygl_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="2016.03.02"
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_right"
                        android:text="@string/house_design_detail"
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_yygl_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawableLeft="@mipmap/nike_theme"
                        android:drawablePadding="5dp"
                        android:text="@string/fourth_service_stpe"
                        android:textColor="@color/text_1"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_yygl_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="2016.03.02"
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_right"
                        android:text="@string/house_design_detail"
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_yy_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="@string/wait_ro_feed_back"
                android:textColor="@color/light_gray2"
                android:textSize="16sp"
                android:textStyle="italic"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
