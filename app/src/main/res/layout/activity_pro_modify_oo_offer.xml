                    <TextView
                        android:id="@+id/tv_rgf"
                        style="@style/left_text"
                        android:layout_centerVertical="true"
                        android:button="@drawable/pro_radio_button"
                        android:drawableLeft="@mipmap/pro_ver_line"
                        android:drawablePadding="@dimen/space_s"
                        android:text="@string/tv_fwbj"/>

                    <ImageView
                        android:id="@+id/iv_btn_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_mm"
