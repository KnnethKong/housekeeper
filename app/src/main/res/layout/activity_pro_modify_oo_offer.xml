                        style="@style/left_text"
                        android:layout_centerVertical="true"
                        android:button="@drawable/pro_radio_button"
                        android:drawableLeft="@mipmap/pro_ver_line"
                        android:drawablePadding="@dimen/space_s"
                        android:text="@string/pro_clf_str"/>

                    <ImageView
                        android:id="@+id/iv_btn_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_mm"
                        android:layout_toRightOf="@id/tv_clf"
                        android:src="@mipmap/pro_offer_icon"/>

                    <EditText
                        android:id="@+id/et_clf_input"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:inputType="number"
                        android:layout_marginRight="@dimen/space_mm"
                        android:minWidth="@dimen/space_smlx"
                        android:gravity="right|center_vertical"
                        android:background="@null"
                        android:hint=""
                        android:padding="@dimen/space_mm"
                        android:textColorHint="@color/hint_text_color"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_hj_price"
                    style="@style/left_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_xl"
                    android:text="合计 "
                    android:textColor="@color/text_color_count"
                    android:textSize="@dimen/txt_xxxl"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm_price"
                style="@style/common_button_style"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/space_mm"
                android:text="@string/pop_confirm"/>
        </LinearLayout>
    </ScrollView>
