                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_content"
                android:layout_margin="@dimen/pro_order_item_padding_middle"

                android:background="@drawable/pro_shade_bj"
                android:orientation="vertical">

                <RelativeLayout
