<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/divider_big_width">

            <TextView
                android:id="@+id/add_house_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="                                                             "
                android:textColor="@color/text_1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_shape_tv_rect_white_little_corner"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:text="@string/add_house_label_1"
                        android:textColor="@color/text_1"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_house_et_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/add_house_hint_1"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/light_gray2"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_down_grey"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:text="@string/add_house_label_2"
                        android:textColor="@color/text_1"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_house_et_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/add_house_hint_2"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/light_gray2"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_down_grey"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:text="@string/add_house_label_3"
                        android:textColor="@color/text_1"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_house_et_house_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/add_house_hint_3"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/light_gray2"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_down_grey"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:text="@string/add_house_label_4"
                        android:textColor="@color/text_1"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_house_et_land_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/add_house_hint_4"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/light_gray2"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_down_grey"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:text="@string/add_house_label_5"
                        android:textColor="@color/text_1"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_house_et_built_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/add_house_hint_5"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/light_gray2"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_down_grey"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:text="@string/add_house_label_6"
                        android:textColor="@color/text_1"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_house_et_green_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/add_house_hint_6"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/light_gray2"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_down_grey"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:text="@string/add_house_label_7"
                        android:textColor="@color/text_1"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_house_et_cement_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/add_house_hint_7"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/light_gray2"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/arrow_down_grey"
                        android:text=""
                        android:textColor="@color/light_gray2"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:text="@string/add_house_label_8"
                        android:textColor="@color/text_1"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/add_house_et_alternate_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/add_house_hint_8"
                        android:inputType="phone"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/light_gray2"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/add_house_tv_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/theme"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>