<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/home_menu_tab_rl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99000000"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/home_menu_tab_ib_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="45dp"
        android:src="@mipmap/icon_kf"/>

    <RelativeLayout
        android:id="@+id/rl_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        >

        <ImageView
            android:id="@+id/home_menu_tab_iv_translate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/home_menu_tab_iv_img3"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/icon_fy"/>


        <ImageView
            android:id="@+id/home_menu_tab_iv_img3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/home_menu_tab_iv_close"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/home_menu_tab_iv_img2"
            android:src="@mipmap/icon_dcfw"/>

        <ImageView
            android:id="@+id/home_menu_tab_iv_img2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/home_menu_tab_iv_img3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:src="@mipmap/icon_zqgl"/>

        <ImageView
            android:id="@+id/home_menu_tab_iv_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_del"/>

        <ImageView
            android:id="@+id/home_menu_tab_iv_img1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/inco_zqbg"
            android:layout_marginEnd="20dp"
            android:layout_above="@+id/home_menu_tab_iv_translate"
            android:layout_toStartOf="@+id/home_menu_tab_iv_img2"/>

    </RelativeLayout>
</RelativeLayout>