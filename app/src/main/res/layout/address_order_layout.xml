<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_l"
        android:layout_marginRight="@dimen/space_l"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#fff">

        <LinearLayout
            android:layout_weight="3"
            android:id="@+id/ll_left_layout"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_conf_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_l"
                android:text="..."
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_prc_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_l"
                    android:text="50 $/æœˆ"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/red"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/tv_prc_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_xxl"
                    android:text=""
                    android:textColor="@color/hint_a_color"

/>
            </LinearLayout>
        </LinearLayout>



        <!--<ImageButton
            android:id="@+id/ib_order_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="@dimen/space_l"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:src="@mipmap/config_icon"/>-->

        <LinearLayout
            android:layout_weight="2"
            android:id="@+id/ib_order_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/space_l"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="11sp"
                android:padding="5dp"
                android:background="@drawable/evalue_slide_red_color_shape"
                android:layout_gravity="right"
                android:text="@string/dz_next_month"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
