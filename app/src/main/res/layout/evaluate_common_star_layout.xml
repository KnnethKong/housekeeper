<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_ev1_bad"
        style="@style/evalute_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pro_evaluate_selector"
        android:drawableRight="@mipmap/eva_bad"
        android:text="@string/eva_tdel"/>

    <TextView
        android:id="@+id/tv_ev2_good"
        style="@style/evalute_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pro_evaluate_selector"
        android:drawableRight="@mipmap/eva_good"
        android:visibility="gone"
        android:text="@string/eva_jybhg"/>


</LinearLayout>

