<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_hous_pro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haiwai.housekeeper.activity.user.NewHousProActivity">

    <com.haiwai.housekeeper.view.TopViewNormalBar
        android:id="@+id/top_pro_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.haiwai.housekeeper.view.TopViewNormalBar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp">

        <SeekBar
            android:id="@+id/issue_addr_sb_bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:max="100"
            android:minHeight="8dp"
            android:progress="25"
            android:progressDrawable="@drawable/seekbar_progress_drawable_publish"
            android:thumb="@null"/>

        <TextView
            android:id="@+id/tv_progress_bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="25"/>
    </LinearLayout>

    <com.haiwai.housekeeper.view.SingleItemView
        android:id="@+id/sigleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.haiwai.housekeeper.view.SingleItemView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <Button
            android:id="@+id/btn_hous_addr_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_m"
            android:layout_marginTop="@dimen/space_xl"
            android:text="@string/tv_next_step"
            />
        <Button
            android:id="@+id/btn_save_house_change_next"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@color/red"
            android:textColor="#fff"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/space_m"
            android:layout_marginTop="@dimen/space_xl"
            android:text="@string/btn_set_btn_save"
            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--<Button
        android:id="@+id/btn_hous_addr_next"
        style="@style/common_vip_button_style"
        android:layout_marginTop="@dimen/space_xxl"
        android:text="@string/tv_next_step"
        />-->

    <LinearLayout
        android:id="@+id/ll_next_layou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/space_l"
            >

            <TextView
                android:id="@+id/tv_order_linkman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tv_or"
                android:textSize="@dimen/txt_l"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_m"
                android:background="@mipmap/pro_order_text_lie"/>
        </FrameLayout>

        <TextView
            android:id="@+id/id_pre_step_hous"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_xxxl"
            android:layout_marginLeft="@dimen/space_l"
            android:layout_marginRight="@dimen/space_l"
            android:gravity="center"
            android:text="@string/tv_contine"
            android:textColor="@color/red"
            android:textSize="@dimen/txt_xxl"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
