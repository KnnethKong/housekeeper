<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/issue_require_view_b_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:text="您的那些区域需要剪草服务您的那些区域需要剪草服务?"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/issue_require_view_b_tv_xuantian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:text="(Optional)"
        android:textStyle="bold"
        android:textColor="@color/text_1"
        android:textSize="16sp" />
    <RadioGroup
        android:id="@+id/issue_require_view_b_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/issue_requirea_view_rb_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/issue_requirea_view_et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@drawable/bg_shape_tv_rect_gray_light_fill_corner"
                />
        </LinearLayout>
    </RadioGroup>
</LinearLayout>